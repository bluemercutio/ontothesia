{
  "name": "ontothesia",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "build": "prisma generate && next build",
    "db-seed": "tsx prisma/seed.ts",
    "migrate-and-seed": "prisma migrate deploy && prisma db seed",
    "create-embeddings": "NODE_NO_WARNINGS=1 tsx --tsconfig tsconfig.json scripts/embeddings.ts",
    "create-scenes": "NODE_NO_WARNINGS=1 tsx --tsconfig tsconfig.json scripts/general.ts",
    "generate-experience-images": "NODE_NO_WARNINGS=1 tsx --tsconfig tsconfig.json scripts/generate-experience-images.ts",
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "start:all": "bash scripts/start-all.sh",
    "stop:all": "bash scripts/shutdown.sh",
    "start:db": "bash scripts/start-db.sh",
    "seed:db": "bash scripts/seed-db.sh"
  },
  "prisma": {
    "schema": "../packages/prisma/prisma/schema.prisma",
    "seed": "npm run db-seed"
  },
  "dependencies": {
    "@arkology-studio/ontothesia-prisma": "*",
    "@arkology-studio/ontothesia-storage": "*",
    "@arkology-studio/ontothesia-types": "*",
    "@reduxjs/toolkit": "^2.6.0",
    "@types/styled-components": "^5.1.34",
    "d3": "^7.9.0",
    "dotenv": "^16.4.7",
    "framer-motion": "^12.4.7",
    "jest": "^29.7.0",
    "next": "15.1.7",
    "openai": "^4.85.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "styled-components": "^6.1.15",
    "three": "^0.174.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/axios": "^0.9.36",
    "@types/d3": "^7.4.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.174.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.8.2",
    "dotenv": "^16.4.7",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "postcss": "^8",
    "prisma": "^6.5.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5"
  }
}
