// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Experience {
  id          String  @id @default(uuid())
  title       String
  description String
  image_url   String
  scenes      Scene[]
}

model Scene {
  id            String      @id
  title         String
  context       String
  artefactId    String
  image_url     String
  video_url     String?
  visualisation String
  experienceId  String?
  artefact      Artefact    @relation("SceneToArtefact", fields: [artefactId], references: [id])
  experience    Experience? @relation(fields: [experienceId], references: [id])
  generation    Generation? @relation("SceneToGeneration")
}

model Artefact {
  id          String       @id
  title       String
  text        String
  region      String
  approx_date String
  citation    String
  scenes      Scene[]      @relation("SceneToArtefact")
  generations Generation[] @relation("GenerationToArtefact")
  embedding   Embedding?
}

model Embedding {
  id         String   @id
  text       String
  vector     Float[]
  artefactId String   @unique
  artefact   Artefact @relation(fields: [artefactId], references: [id])
}

model Generation {
  id         String   @id
  prompt     String
  image_url  String
  artefactId String
  sceneId    String   @unique
  artefact   Artefact @relation("GenerationToArtefact", fields: [artefactId], references: [id])
  scene      Scene    @relation("SceneToGeneration", fields: [sceneId], references: [id])
}
